# /etc/bash.bashrc

# Global Alias List
alias _Xchmod='chmod -Rv a+rwx *'
alias _Xrm='rm -rv *'
alias ll='ls -lah'
alias la='ls -lah'
alias llc='ls -ltcah'
alias cdh='cd ~/'
alias dfh='df --total -ht ext4'
alias df='df -h'
alias duc='du -ch .'
alias ssu='sudo su -'
alias all_ports='netstat -tulpn | grep '
alias sctl='systemctl '
alias ctlre='systemctl restart '
alias ctlsu='systemctl status '
alias dpsa='docker ps --all'
alias rmf='rm -Rfv'
